<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:backgroundTint="#FFF"
    tools:context=".Drivers.RequestVacation">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#F5F5F5"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:layout_weight="1">

                <io.feeeei.circleseekbar.CircleSeekBar
                    android:id="@+id/RequestVacation_SeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    app:wheel_can_touch="false"
                    app:wheel_has_cache="true"
                    app:wheel_pointer_color="#F34e70"
                    app:wheel_reached_color="#F34e70"
                    app:wheel_reached_width="17dp"
                    app:wheel_scroll_only_one_circle="true"
                    app:wheel_unreached_color="#B7B7B8"
                    app:wheel_unreached_width="17dp" />

                <TextView
                    android:id="@+id/RequestVacation_TextPersent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/iransansbold"
                    android:gravity="center"
                    android:text="0%"
                    android:textColor="#F34e70"
                    android:textSize="@dimen/spacing_mxlarge" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="4dp"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/shabnam"
                    android:text="استفاده شده"
                    android:textColor="#F34e70" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="12dp"
                    android:drawableRight="@drawable/ic_fiber_manual_1"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/shabnam"
                    android:text="باقی مانده"
                    android:textColor="#B7B7B8" />


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="8dp"
                    android:elevation="0dp"

                    app:cardCornerRadius="8dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:background="#B7B7B8"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:fontFamily="@font/shabnam"
                                android:gravity="center"
                                android:text="باقی مانده"
                                android:textColor="#FFF" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#FFF" />

                            <TextView
                                android:id="@+id/RequestVacation_Remaining"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:fontFamily="@font/iransansbold"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="#FFF" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:background="#F34e70"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:fontFamily="@font/shabnam"
                                android:gravity="center"
                                android:text="استفاده شده"
                                android:textColor="#FFF" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#FFF" />

                            <TextView
                                android:id="@+id/RequestVacation_Used"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:fontFamily="@font/iransansbold"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="#FFF" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:background="#689F38"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:fontFamily="@font/shabnam"
                                android:gravity="center"
                                android:text="مرخصی کل"
                                android:textColor="#FFF" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#FFF" />

                            <TextView
                                android:id="@+id/RequestVacation_Entire"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:fontFamily="@font/iransansbold"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="#FFF" />
                        </LinearLayout>

                    </LinearLayout>


                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/RequestVacation_Form"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.7"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="@dimen/appbar_padding_top"
            android:paddingEnd="@dimen/appbar_padding_top"
            android:visibility="visible">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_xxxlarge"
                android:gravity="center_vertical"
                android:minHeight="@dimen/spacing_xxlarge"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/spacing_large"
                android:paddingRight="@dimen/spacing_large">


                <LinearLayout
                    android:id="@+id/SearchObject_SEDate"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/RequestVacation_EndDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.87"
                        android:fontFamily="@font/shabnam"
                        android:gravity="center"
                        android:hint="پایان تاریخ"
                        android:textSize="@dimen/spacing_large" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:fontFamily="@font/shabnam"
                        android:gravity="center"
                        android:text="الی"
                        android:textColor="#000"
                        android:textSize="@dimen/spacing_large" />

                    <TextView
                        android:id="@+id/RequestVacation_StartDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:fontFamily="@font/shabnam"
                        android:gravity="center"
                        android:text="شروع تاریخ"
                        android:textSize="@dimen/spacing_large" />


                </LinearLayout>


                <View
                    android:layout_width="@dimen/spacing_middle"
                    android:layout_height="wrap_content" />


                <ImageButton
                    android:layout_width="@dimen/spacing_xlarge"
                    android:layout_height="@dimen/spacing_xlarge"
                    android:background="@android:color/transparent"
                    android:tint="@color/grey_40"
                    app:srcCompat="@drawable/ic_calendar" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_xxxlarge"
                android:gravity="center_vertical"
                android:minHeight="@dimen/spacing_xxlarge"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/spacing_large"
                android:paddingRight="@dimen/spacing_large">


                <LinearLayout
                    android:id="@+id/SearchObject_SEDate1"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/RequestVacation_EndTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.87"
                        android:fontFamily="@font/shabnam"
                        android:gravity="center"
                        android:hint="پایان ساعت"
                        android:textSize="@dimen/spacing_large" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:fontFamily="@font/shabnam"
                        android:gravity="center"
                        android:text="الی"
                        android:textColor="#000"
                        android:textSize="@dimen/spacing_large" />

                    <TextView
                        android:id="@+id/RequestVacation_StartTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:fontFamily="@font/shabnam"
                        android:gravity="center"
                        android:text="شروع ساعت"
                        android:textSize="@dimen/spacing_large" />


                </LinearLayout>


                <View
                    android:layout_width="@dimen/spacing_middle"
                    android:layout_height="wrap_content" />


                <ImageButton
                    android:layout_width="@dimen/spacing_xlarge"
                    android:layout_height="@dimen/spacing_xlarge"
                    android:background="@android:color/transparent"
                    android:tint="@color/grey_40"
                    app:srcCompat="@drawable/ic_calendar" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_xxxlarge"
                android:gravity="center_vertical"
                android:minHeight="@dimen/spacing_xxlarge"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/spacing_large"
                android:paddingRight="@dimen/spacing_large">

                <Spinner
                    android:id="@+id/RequestVacation_Category"
                    android:layout_width="0dp"
                    android:layout_height="46dp"
                    android:layout_weight="1"
                    android:background="@drawable/back_spinner"
                    android:focusableInTouchMode="true"
                    android:layoutDirection="rtl"
                    android:popupBackground="#62ffffff"
                    android:soundEffectsEnabled="true"
                    android:spinnerMode="dialog"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

                <View
                    android:layout_width="@dimen/spacing_middle"
                    android:layout_height="wrap_content" />


                <ImageButton
                    android:layout_width="@dimen/spacing_xlarge"
                    android:layout_height="@dimen/spacing_xlarge"
                    android:background="@android:color/transparent"
                    android:tint="@color/grey_40"
                    app:srcCompat="@drawable/img_title" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_xxxxlarge"
                android:gravity="center_vertical"
                android:minHeight="@dimen/spacing_xxlarge"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/spacing_large"
                android:paddingRight="@dimen/spacing_large">


                <EditText
                    android:id="@+id/RequestVacation_Destination"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/res_focused_edittext"
                    android:ems="10"
                    android:fontFamily="@font/shabnam"
                    android:hint="مقصد"
                    android:inputType="text"
                    android:lines="3"
                    android:padding="@dimen/spacing_small"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/grey_80" />


                <View
                    android:layout_width="@dimen/spacing_middle"
                    android:layout_height="wrap_content" />


                <ImageButton
                    android:layout_width="@dimen/spacing_xlarge"
                    android:layout_height="@dimen/spacing_xlarge"
                    android:background="@android:color/transparent"
                    android:tint="@color/grey_40"
                    app:srcCompat="@drawable/img_compliant_text" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/RequestVacation_Btn1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:gravity="center"
            android:visibility="visible">

            <Button
                android:id="@+id/RequestVacation_Btn"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:backgroundTint="@color/green_400"
                android:drawableRight="@drawable/ic_check"
                android:fontFamily="@font/shabnam"
                android:text="ثبت نهایی"
                android:textColor="#d9f1fd"
                android:textSize="15dp" />


            <!--<Button-->
            <!--android:id="@+id/sign_out"-->
            <!--android:layout_width="170dp"-->
            <!--android:layout_height="?attr/actionBarSize"-->
            <!--android:layout_marginRight="25dp"-->
            <!--android:backgroundTint="@color/orange_300"-->
            <!--android:fontFamily="@font/shabnam"-->
            <!--android:text="ثبت پیش نویس"-->
            <!--android:textColor="#d9f1fd"-->
            <!--android:textSize="13sp"-->
            <!--android:drawableRight="@drawable/ic_create_"/>-->

        </LinearLayout>

        <TextView
            android:id="@+id/RequestVacation_Status"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:visibility="gone"
            android:gravity="center"
            android:fontFamily="@font/shabnam"
            android:textSize="@dimen/spacing_large"
            android:layout_margin="12dp"
            android:textColor="#856404"
            android:text="راننده گرامی! تا بررسی آخرین درخواست که توسط شما داده شده صبر کنید."/>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/RequestVacation_Loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#52CCCCCC"
        android:visibility="gone">


        <com.tuyenmonkey.mkloader.MKLoader
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            app:mk_color="@color/colorPrimary"
            app:mk_type="TwinFishesSpinner" />


    </RelativeLayout>


</RelativeLayout>