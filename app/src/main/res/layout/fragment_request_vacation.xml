<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context=".Drivers.RequestVacation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <com.anychart.AnyChartView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/RequestVacation_Chart">

            </com.anychart.AnyChartView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.7"
        android:orientation="vertical"
        android:paddingStart="@dimen/appbar_padding_top"
        android:paddingEnd="@dimen/appbar_padding_top"
        android:gravity="center">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_xxxlarge"
            android:gravity="center_vertical"
            android:minHeight="@dimen/spacing_xxlarge"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/spacing_large"
            android:paddingRight="@dimen/spacing_large">

            <Spinner
                android:id="@+id/RegisterObject_Category1"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:background="@drawable/back_spinner"
                android:focusableInTouchMode="true"
                android:layoutDirection="rtl"
                android:popupBackground="#62ffffff"
                android:soundEffectsEnabled="true"
                android:spinnerMode="dialog"
                />

            <View
                android:layout_width="@dimen/spacing_middle"
                android:layout_height="wrap_content" />


            <ImageButton
                android:layout_width="@dimen/spacing_xlarge"
                android:layout_height="@dimen/spacing_xlarge"
                android:background="@android:color/transparent"
                android:tint="@color/grey_40"
                app:srcCompat="@drawable/img_user" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_xxxlarge"
            android:gravity="center_vertical"
            android:minHeight="@dimen/spacing_xxlarge"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/spacing_large"
            android:paddingRight="@dimen/spacing_large">


            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/shabnam"
                android:hint="عنوان"
                android:lines="1"
                android:padding="@dimen/default_dash_indicator_width"
                android:background="@drawable/res_focused_edittext"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/grey_80"
                android:id="@+id/RegisterObject_Title"/>


            <View
                android:layout_width="@dimen/spacing_middle"
                android:layout_height="wrap_content" />


            <ImageButton
                android:layout_width="@dimen/spacing_xlarge"
                android:layout_height="@dimen/spacing_xlarge"
                android:background="@android:color/transparent"
                android:tint="@color/grey_40"
                app:srcCompat="@drawable/img_title" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_xxxlarge"
            android:gravity="center_vertical"
            android:minHeight="@dimen/spacing_xxlarge"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/spacing_large"
            android:paddingRight="@dimen/spacing_large">

            <Spinner
                android:id="@+id/RegisterObject_Category"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:background="@drawable/back_spinner"
                android:focusableInTouchMode="true"
                android:layoutDirection="rtl"
                android:popupBackground="#62ffffff"
                android:soundEffectsEnabled="true"
                android:spinnerMode="dialog"
                />

            <View
                android:layout_width="@dimen/spacing_middle"
                android:layout_height="wrap_content" />


            <ImageButton
                android:layout_width="@dimen/spacing_xlarge"
                android:layout_height="@dimen/spacing_xlarge"
                android:background="@android:color/transparent"
                android:tint="@color/grey_40"
                app:srcCompat="@drawable/img_user" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_xxxxlarge"
            android:gravity="center_vertical"
            android:minHeight="@dimen/spacing_xxlarge"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/spacing_large"
            android:paddingRight="@dimen/spacing_large">


            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/shabnam"
                android:hint="توضیحات"
                android:inputType="textMultiLine"
                android:lines="3"
                android:padding="@dimen/default_dash_indicator_width"
                android:background="@drawable/res_focused_edittext"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/grey_80"
                android:id="@+id/RegisterObject_Description"/>


            <View
                android:layout_width="@dimen/spacing_middle"
                android:layout_height="wrap_content" />


            <ImageButton
                android:layout_width="@dimen/spacing_xlarge"
                android:layout_height="@dimen/spacing_xlarge"
                android:background="@android:color/transparent"
                android:tint="@color/grey_40"
                app:srcCompat="@drawable/img_compliant_text" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:gravity="center">

        <Button
            android:id="@+id/sign_out1"
            android:layout_width="160dp"
            android:layout_height="?attr/actionBarSize"
            android:backgroundTint="@color/colorPrimary"
            android:fontFamily="@font/shabnam"
            android:text="ثبت نهایی"
            android:textColor="#d9f1fd"
            android:textSize="15sp"
            android:drawableRight="@drawable/ic_check"/>


        <Button
            android:id="@+id/sign_out"
            android:layout_width="170dp"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginRight="25dp"
            android:backgroundTint="@color/orange_300"
            android:fontFamily="@font/shabnam"
            android:text="ثبت پیش نویس"
            android:textColor="#d9f1fd"
            android:textSize="13sp"
            android:drawableRight="@drawable/ic_create_"/>

    </LinearLayout>


</LinearLayout>