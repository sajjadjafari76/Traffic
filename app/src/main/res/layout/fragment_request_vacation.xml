    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.7"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="@dimen/appbar_padding_top"
        android:paddingEnd="@dimen/appbar_padding_top">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_xxxlarge"
            android:gravity="center_vertical"
            android:minHeight="@dimen/spacing_xxlarge"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/spacing_large"
            android:paddingRight="@dimen/spacing_large">


            <LinearLayout
                android:id="@+id/SearchObject_SEDate"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/RequestVacation_EndDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.87"
                    android:fontFamily="@font/shabnam"
                    android:gravity="center"
                    android:hint="پایان تاریخ"
                    android:textSize="@dimen/spacing_large" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:fontFamily="@font/shabnam"
                    android:gravity="center"
                    android:text="الی"
                    android:textColor="#000"
                    android:textSize="@dimen/spacing_large" />

                <TextView
                    android:id="@+id/RequestVacation_StartDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:fontFamily="@font/shabnam"
                    android:gravity="center"
                    android:text="شروع تاریخ"
                    android:textSize="@dimen/spacing_large" />


            </LinearLayout>


            <View
                android:layout_width="@dimen/spacing_middle"
                android:layout_height="wrap_content" />


            <ImageButton
                android:layout_width="@dimen/spacing_xlarge"
                android:layout_height="@dimen/spacing_xlarge"
                android:background="@android:color/transparent"
                android:tint="@color/grey_40"
                app:srcCompat="@drawable/img_user" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_xxxlarge"
            android:gravity="center_vertical"
            android:minHeight="@dimen/spacing_xxlarge"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/spacing_large"
            android:paddingRight="@dimen/spacing_large">


            <LinearLayout
                android:id="@+id/SearchObject_SEDate1"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/RequestVacation_EndTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.87"
                    android:fontFamily="@font/shabnam"
                    android:gravity="center"
                    android:hint="پایان ساعت"
                    android:textSize="@dimen/spacing_large" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:fontFamily="@font/shabnam"
                    android:gravity="center"
                    android:text="الی"
                    android:textColor="#000"
                    android:textSize="@dimen/spacing_large" />

                <TextView
                    android:id="@+id/RequestVacation_StartTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:fontFamily="@font/shabnam"
                    android:gravity="center"
                    android:text="شروع ساعت"
                    android:textSize="@dimen/spacing_large" />


            </LinearLayout>


            <View
                android:layout_width="@dimen/spacing_middle"
                android:layout_height="wrap_content" />


            <ImageButton
                android:layout_width="@dimen/spacing_xlarge"
                android:layout_height="@dimen/spacing_xlarge"
                android:background="@android:color/transparent"
                android:tint="@color/grey_40"
                app:srcCompat="@drawable/img_title" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_xxxlarge"
            android:gravity="center_vertical"
            android:minHeight="@dimen/spacing_xxlarge"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/spacing_large"
            android:paddingRight="@dimen/spacing_large">

            <Spinner
                android:id="@+id/RequestVacation_Category"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:background="@drawable/back_spinner"
                android:focusableInTouchMode="true"
                android:layoutDirection="rtl"
                android:popupBackground="#62ffffff"
                android:soundEffectsEnabled="true"
                android:spinnerMode="dialog"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            <View
                android:layout_width="@dimen/spacing_middle"
                android:layout_height="wrap_content" />


            <ImageButton
                android:layout_width="@dimen/spacing_xlarge"
                android:layout_height="@dimen/spacing_xlarge"
                android:background="@android:color/transparent"
                android:tint="@color/grey_40"
                app:srcCompat="@drawable/img_user" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_xxxxlarge"
            android:gravity="center_vertical"
            android:minHeight="@dimen/spacing_xxlarge"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/spacing_large"
            android:paddingRight="@dimen/spacing_large">


            <EditText
                android:id="@+id/RequestVacation_Destination"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/res_focused_edittext"
                android:ems="10"
                android:fontFamily="@font/shabnam"
                android:hint="مقصد"
                android:inputType="text"
                android:lines="3"
                android:padding="@dimen/spacing_small"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/grey_80" />


            <View
                android:layout_width="@dimen/spacing_middle"
                android:layout_height="wrap_content" />


            <ImageButton
                android:layout_width="@dimen/spacing_xlarge"
                android:layout_height="@dimen/spacing_xlarge"
                android:background="@android:color/transparent"
                android:tint="@color/grey_40"
                app:srcCompat="@drawable/img_compliant_text" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:gravity="center">

        <Button
            android:id="@+id/RequestVacation_Btn"
            android:layout_width="160dp"
            android:layout_height="?attr/actionBarSize"
            android:backgroundTint="@color/colorPrimary"
            android:drawableRight="@drawable/ic_check"
            android:fontFamily="@font/shabnam"
            android:text="ثبت نهایی"
            android:textColor="#d9f1fd"
            android:textSize="15sp" />


        <!--<Button-->
