<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="1dp"
    app:cardCornerRadius="2dp"
    android:layout_margin="3dp"
    android:id="@+id/RecyclerMainActivity_Root"
    android:background="@color/overlay_light_40"
    android:backgroundTint="@color/overlay_light_40">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="8dp">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="3dp"
            android:id="@+id/RecyclerMainActivity_Image"/>

        <irstit.transport.Views.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            tools:text="نرخ های جدید سازمان"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:textColor="#616161"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:textSize="10sp"
            android:id="@+id/RecyclerMainActivity_Text"/>


    </LinearLayout>


</android.support.v7.widget.CardView>