<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/profile2"
    tools:context=".PhonePay.ProfileFragment"
    android:weightSum="5"
    >

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="2"
       android:orientation="vertical"
       android:id="@+id/L0"

       >

       <android.support.v7.widget.Toolbar
           android:id="@+id/t1"
           android:layout_width="match_parent"
           android:layout_height="?android:attr/actionBarSize">

                 <RelativeLayout
                     android:layout_width="match_parent"
                     android:layout_height="?android:attr/actionBarSize">


                     <ImageView
                         android:layout_width="24dp"
                         android:layout_height="24dp"
                         android:id="@+id/editButton"
                         android:src="@drawable/pen"
                         android:layout_marginTop="15dp"

                         />

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="@string/pay_profile"
                         android:textColor="@color/mdtp_white"
                         android:fontFamily="@font/shabnam"
                         android:layout_centerInParent="true"
                         android:textSize="18sp"
                         />

                     <ImageView
                         android:layout_width="24dp"
                         android:layout_height="24dp"
                         android:id="@+id/righarrow"
                         android:src="@drawable/rightarrow"
                         android:layout_marginTop="15dp"
                         android:layout_marginRight="12dp"
                         android:layout_alignParentRight="true"
                         />



                 </RelativeLayout>

               </android.support.v7.widget.Toolbar>

       <TextView
           android:id="@+id/firstname"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/t1"
           android:layout_alignParentRight="true"
           android:layout_marginRight="22dp"
           android:textSize="18sp"
           android:text="Ali saberi"
           android:fontFamily="@font/shabnam"
           android:textColor="@color/mdtp_white"
           />

       <TextView
           android:id="@+id/email"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/t1"
           android:layout_alignParentRight="true"
           android:layout_marginRight="22dp"
           android:layout_marginTop="25dp"
           android:textSize="18sp"
           android:fontFamily="@font/shabnam"
           android:text="Alisaberi@gmail.com"
           android:textColor="@color/mdtp_white"
           />

         <irstit.transport.PhonePay.CircularImageView
             android:layout_width="145dp"
             android:layout_height="145dp"
             android:src="@drawable/slider_bk"
             android:layout_marginLeft="40dp"
             android:layout_marginTop="85dp"
             android:layout_marginBottom="10dp"
             android:id="@+id/circleImage"
             />

       <TextView
           android:id="@+id/accountInfo"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/circleImage"
           android:text="  مشخصات حساب"
           android:fontFamily="@font/shabnam"
           android:layout_centerHorizontal="true"
           android:textColor="@color/mdtp_light_gray"
           android:layout_marginTop="5dp"
           android:textSize="18sp"

           />





   </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:background="@drawable/profile_background_style"
        android:id="@+id/L1"
        android:weightSum="3"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:id="@+id/phone_profile_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/phone_profile_left_arrow"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/shabnam"
                android:textColor="@color/overlay_black"
                android:text="ایجاد شناسه کاربری"
                android:textSize="14sp"
                android:layout_marginRight="15dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/phone_profile_left_arrow"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/untitled" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:id="@+id/phone_profile_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/shabnam"
                android:textColor="@color/overlay_black"
                android:text="شماره من"
                android:textSize="14sp"
                android:layout_marginRight="15dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/phone_profile_phone_left_arrow"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/untitled" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:id="@+id/phone_profile_mybrcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/shabnam"
                android:textColor="@color/overlay_black"
                android:text="بارکد من"
                android:textSize="14sp"
                android:layout_marginRight="15dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/phone_profile_mybrcode_left_arrow"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/untitled" />

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/profile_background_style"
        android:id="@+id/L2"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:id="@+id/phone_profile_security"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/shabnam"
                android:layout_marginTop="5dp"
                android:text="@string/security"
                android:textSize="14sp"
                android:textColor="@color/mdtp_transparent_black"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:textStyle="bold" />



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:id="@+id/phone_profile_generate_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/shabnam"
                android:textColor="@color/overlay_black"
                android:text="@string/generate_password"
                android:textSize="14sp"
                android:layout_marginRight="15dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/phone_profile_genetate_pass_left_arrow"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/untitled" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
           android:layout_marginTop="5dp"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/phone_profile_so_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp"
                android:fontFamily="@font/shabnam"
                android:text="@string/so_on"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:background="@drawable/profile_background_style"
        android:id="@+id/L3"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:id="@+id/phone_profile_sending_suggestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/shabnam"
                android:textColor="@color/overlay_black"
                android:text="@string/suggestion"
                android:textSize="14sp"
                android:layout_marginRight="15dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/phone_profile_ending_suggestion_left_arrow"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/untitled" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>