<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ebebeb"
    app:cardElevation="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <TextView
            android:id="@+id/transctoinnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تراکنش شماره یک "
            android:textSize="16sp"
            android:fontFamily="@font/shabnam"
            android:layout_toLeftOf="@+id/Search_View"
            android:layout_centerVertical="true"
            android:textColor="@color/overlay_black"
            android:textStyle="bold"
            android:elevation="1dp"
            />

        <RelativeLayout
            android:id="@+id/Search_View"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/layout_for_transction_item"
            android:gravity="center">
           <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/S_Bk">

                <ImageView
                    android:id="@+id/transctionsearchimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/greencheck" />

            </RelativeLayout>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/Search_View"
            android:paddingLeft="20dp"
            android:background="@drawable/layout_for_transction_item"
            android:paddingTop="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:fontFamily="@font/shabnam"
                android:gravity="bottom|left"
                tools:text="عنوان : گردنبند طلا"
                android:textSize="16sp"
                android:textColor="#000"
                android:id="@+id/transction_price"
                android:layout_gravity="left"
                android:textStyle="bold"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:fontFamily="@font/shabnam"
                android:paddingTop="@dimen/spacing_small"
                android:text="تاریخ یافت : 1397/11/17"
                android:textColor="#636363"
                android:textSize="11sp"
                android:id="@+id/transction_Date"
                android:gravity="right"
                android:layout_gravity="left"/>

        </LinearLayout>

        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0.5dp"-->
            <!--android:background="#6D000000"-->
            <!--android:layout_alignParentBottom="true"/>-->


    </RelativeLayout>


</android.support.v7.widget.CardView>