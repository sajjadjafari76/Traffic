<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:orientation="vertical">

        <irstit.transport.Views.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="هشدار"
            android:textColor="#000"
            android:textSize="17sp"/>

        <irstit.transport.Views.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="آیا مایل به خروج از حساب کاربری خود هستید؟"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:id="@+id/CustomPermission_Content"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp">

            <irstit.transport.Views.CustomButton
                android:id="@+id/CustomPermission_Yes"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="بله"
                app:Fonts="Fonts/IRANSANS.ttf" />

            <irstit.transport.Views.CustomButton
                android:id="@+id/CustomPermission_Cancel"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="خیر"
                app:Fonts="Fonts/IRANSANS.ttf" />

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>