<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhonePay.pay_by_recipient_code"
    android:layout_weight="3"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/IncreasingFragment"
    android:background="#746DBA"
    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:orientation="vertical">




        <android.support.v7.widget.CardView
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            app:cardCornerRadius="20dp"

            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/increasing_balance"
                android:textSize="25sp"
                android:padding="4dp"
                android:layout_gravity="center"
                android:fontFamily="@font/shabnam"
                android:textColor="@color/mdtp_transparent_black"

                />

        </android.support.v7.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:src="@drawable/minius2"
            android:layout_alignParentLeft="true"
            android:paddingLeft="22dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2000  تومان"
            android:textColor="@color/mdtp_white"
            android:textSize="28sp"
             android:layout_centerHorizontal="true"
            android:fontFamily="@font/shabnam"
            android:layout_marginBottom="40dp"

            />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:paddingRight="22dp"
            android:src="@drawable/plus2"/>

    </RelativeLayout>

        <TextView
            android:id="@+id/pay_by_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xmedium"
            android:inputType="number"
            android:text="@string/all_our_prices"
            android:fontFamily="@font/shabnam"
            android:textColor="@android:color/white"
            android:textSize="20sp"
        />



    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:orientation="vertical">



        <android.support.v7.widget.CardView
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            app:cardCornerRadius="20dp"

            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/increasing_balance"
                android:textSize="25sp"
                android:padding="4dp"
                android:layout_gravity="center"
                android:fontFamily="@font/shabnam"
                android:textColor="@color/mdtp_transparent_black"

                />

        </android.support.v7.widget.CardView>







    </LinearLayout>


</LinearLayout>