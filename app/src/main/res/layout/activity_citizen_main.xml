<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CitizenMain_Drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_bg"
        android:orientation="vertical"
        android:weightSum="2.2"
        tools:context=".MainPage">


        <android.support.v7.widget.Toolbar
            android:id="@+id/CitizenMain_Toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/CitizenMain_NavigatorIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    app:srcCompat="@drawable/ic_menu" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    app:srcCompat="@drawable/sahat" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="18dp"
                    android:layout_toLeftOf="@+id/CitizenMain_NavigatorIcon"
                    android:src="@drawable/logo" />


                <RelativeLayout
                    android:id="@+id/MainActivity_Login"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="9dp"
                    android:background="#1BF8F8F8">

                    <TextView
                        android:id="@+id/CitizenMain_Name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="2dp"
                        android:fontFamily="@font/iransans"
                        android:gravity="center"
                        android:text="@string/MainActivity_Login_Text_2"
                        android:textColor="#FFF"
                        android:textSize="14sp" />


                </RelativeLayout>

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>


        <LinearLayout
            android:id="@+id/DriverMainTwo_View"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/DriverMainTwo_Bottom"
            android:layout_below="@+id/CitizenMain_Toolbar"
            android:orientation="vertical"
            android:weightSum="2.2"
            tools:context=".MainPage">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/CitizenMain_regCompliant"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="160dp"
                        android:src="@drawable/regcomplaint" />

                    <android.support.v7.widget.CardView
                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:background="#3F51B5"
                        app:cardBackgroundColor="#3F51B5"
                        app:cardCornerRadius="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/shabnam"
                            android:gravity="center"
                            android:text="ثبت شکایات"
                            android:textAlignment="center"
                            android:textColor="#ffff"
                            android:textSize="16sp" />

                    </android.support.v7.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/CitizenMain_SearchObj"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="160dp"
                        android:src="@drawable/search" />

                    <android.support.v7.widget.CardView
                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:background="#3F51B5"
                        app:cardBackgroundColor="#3F51B5"
                        app:cardCornerRadius="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/shabnam"
                            android:gravity="center"
                            android:text="@string/sample_string"
                            android:textAlignment="center"
                            android:textColor="#ffff"
                            android:textSize="16sp" />

                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:gravity="top"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/CitizenMain_Price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="160dp"
                        android:src="@drawable/price" />

                    <android.support.v7.widget.CardView
                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:background="#3F51B5"
                        app:cardBackgroundColor="#3F51B5"
                        app:cardCornerRadius="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/shabnam"
                            android:gravity="center"
                            android:text="نرخ نامه"
                            android:textAlignment="center"
                            android:textColor="#ffff"
                            android:textSize="16sp" />

                    </android.support.v7.widget.CardView>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/CitizenMain_regObj"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="160dp"
                        android:src="@drawable/regobj" />

                    <android.support.v7.widget.CardView
                        android:layout_width="170dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:background="#3F51B5"
                        app:cardBackgroundColor="#3F51B5"
                        app:cardCornerRadius="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/shabnam"
                            android:gravity="center"
                            android:text="ثبت اشیا مفقودی"
                            android:textAlignment="center"
                            android:textColor="#ffff"
                            android:textSize="16sp" />

                    </android.support.v7.widget.CardView>


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/CitizenMain_Bottom"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/CitizenMain_Dial1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#3293B8"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:fontFamily="@font/shabnam"
                    android:text="تماس با ما"
                    android:textColor="#FFF" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_call" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/CitizenMain_Site"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/colorPrimary"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:fontFamily="@font/shabnam"
                    android:text="ورود به سایت"
                    android:textColor="#FFF" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_domain" />

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/MAinActivity_NavigationView_citizen"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        app:headerLayout="@layout/layout_navigation">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="165dp">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/CitizenMain_RecyClerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:src="@drawable/img_footer_navigation" />

        </RelativeLayout>

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>