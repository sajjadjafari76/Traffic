<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Citizens.SearchObject">


    <android.support.v7.widget.Toolbar
        android:id="@+id/SearchObject_Toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/RegisterObject_Back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                app:srcCompat="@drawable/ic_left_arrow" />


            <irstit.transport.Views.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/MainActivity_Search"
                android:textColor="@color/green_50"
                android:textSize="@dimen/ToolbarSize" />


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/search" />
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:id="@+id/SearchObject_Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SearchObject_Toolbar"
        android:background="#B5F3F3F3"
        android:backgroundTint="#B5F3F3F3"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.github.florent37.expansionpanel.ExpansionLayout
                android:id="@+id/SearchObject_ExpansionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:expansion_expanded="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="8dp">

                    <LinearLayout
                        android:id="@+id/SearchObject_Image"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:padding="13dp"
                            app:srcCompat="@drawable/ic_calendar" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:paddingStart="10dp"
                            android:paddingTop="5dp"
                            android:paddingEnd="10dp"
                            app:srcCompat="@drawable/img_title" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/SearchObject_SEDate"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_toLeftOf="@+id/SearchObject_Image"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/SearchObject_End"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.87"
                            android:fontFamily="@font/shabnam"
                            android:hint="پایان تاریخ"
                            android:gravity="center"
                            android:textSize="@dimen/spacing_large" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:fontFamily="@font/shabnam"
                            android:gravity="center"
                            android:text="الی"
                            android:textColor="#000"
                            android:textSize="@dimen/spacing_large" />

                        <TextView
                            android:id="@+id/SearchObject_Start"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:fontFamily="@font/shabnam"
                            android:gravity="center"
                            android:hint="شروع تاریخ"
                            android:textSize="@dimen/spacing_large"/>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/SearchObject_View"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_below="@+id/SearchObject_SEDate"
                        android:layout_toLeftOf="@+id/SearchObject_Image"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="2">


                        <Button
                            android:id="@+id/RegisterObject_Btn"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_marginRight="@dimen/spacing_middle"
                            android:layout_weight="0.5"
                            android:fontFamily="@font/shabnam"
                            android:text="جستجو"
                            android:theme="@style/Button.Accent" />

                        <Spinner
                            android:id="@+id/RegisterObject_Category"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.4"
                            android:background="@drawable/back_spinner"
                            android:focusableInTouchMode="true"
                            android:layoutDirection="rtl"
                            android:popupBackground="#62ffffff"
                            android:soundEffectsEnabled="true"
                            android:spinnerMode="dialog"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />


                    </LinearLayout>


                </RelativeLayout>


            </com.github.florent37.expansionpanel.ExpansionLayout>


            <com.github.florent37.expansionpanel.ExpansionHeader
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:expansion_headerIndicator="@+id/SearchObject_Indicator"
                app:expansion_layout="@+id/SearchObject_ExpansionLayout"
                app:expansion_toggleOnClick="true"
                android:id="@+id/SearchObject_Header">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="52dp">

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/iransansbold"
                        android:gravity="center"
                        android:text="نتایج جستجو"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/spacing_smlarge" />

                    <ImageView
                        android:id="@+id/SearchObject_Indicator"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        app:srcCompat="@drawable/ic_list_blue" />

                </RelativeLayout>


            </com.github.florent37.expansionpanel.ExpansionHeader>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/SearchObject_Recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/SearchObject_Card"
        android:padding="3dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/SearchObject_Null"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/SearchObject_Card"
        android:text="اشیایی در بازه زمانی مشخص شده یافت نشد"
        android:gravity="center"
        android:textSize="@dimen/spacing_smlarge"
        android:textColor="#000"
        android:visibility="gone"
        android:fontFamily="@font/shabnam"/>

</RelativeLayout>