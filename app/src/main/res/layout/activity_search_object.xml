<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Citizens.SearchObject">


    <android.support.v7.widget.Toolbar
        android:id="@+id/SearchObject_Toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                app:srcCompat="@drawable/ic_left_arrow"
                android:id="@+id/RegisterObject_Back"/>


            <irstit.transport.Views.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/MainActivity_Search"
                android:textColor="@color/green_50"
                android:textSize="@dimen/ToolbarSize" />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:id="@+id/SearchObject_Card"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/SearchObject_Toolbar"
        app:cardElevation="1dp"
        android:background="#B5F3F3F3"
        android:backgroundTint="#B5F3F3F3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:id="@+id/SearchObject_Image"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:srcCompat="@drawable/ic_calendar"
                    android:padding="13dp"/>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:srcCompat="@drawable/img_title"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:gravity="center"
                android:layout_toLeftOf="@+id/SearchObject_Image"
                android:id="@+id/SearchObject_SEDate">


                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="0.87"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/shabnam"
                    android:textSize="@dimen/spacing_large"
                    android:hint="پایان"
                    android:id="@+id/SearchObject_End"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:text="الی"
                    android:textSize="@dimen/spacing_large"
                    android:textColor="#000"
                    android:gravity="center"
                    android:fontFamily="@font/shabnam"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="wrap_content"
                    android:hint="شروع"
                    android:textSize="@dimen/spacing_large"
                    android:fontFamily="@font/shabnam"
                    android:id="@+id/SearchObject_Start">
                    <requestFocus/>
                </EditText>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:gravity="center"
                android:layout_toLeftOf="@+id/SearchObject_Image"
                android:layout_below="@+id/SearchObject_SEDate"
                android:id="@+id/SearchObject_View">


                <Button
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.5"
                    android:theme="@style/Button.Accent"
                    android:id="@+id/RegisterObject_Btn"
                    android:fontFamily="@font/shabnam"
                    android:text="جستجو"
                    android:layout_marginRight="@dimen/spacing_middle"/>

                <Spinner
                    android:id="@+id/RegisterObject_Category"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:background="@drawable/back_spinner"
                    android:focusableInTouchMode="true"
                    android:layoutDirection="rtl"
                    android:popupBackground="#62ffffff"
                    android:soundEffectsEnabled="true"
                    android:spinnerMode="dialog"
                    />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_below="@+id/SearchObject_View"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:text="نتایج جستجو"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/iransansbold"
                    android:textSize="@dimen/spacing_smlarge"/>

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_list"
                    android:padding="3dp"/>

            </RelativeLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/SearchObject_Card"
        android:id="@+id/SearchObject_Recycler"
        android:padding="3dp"/>

</RelativeLayout>