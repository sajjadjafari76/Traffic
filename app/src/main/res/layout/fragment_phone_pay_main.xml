<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#746DBA"
    android:weightSum="10"
    android:orientation="vertical"


    tools:context=".PhonePay.PhonePayMainFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/plus2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:fontFamily="@font/shabnam"
            android:text="تاک پرداخت"
            android:textColor="@color/mdtp_white"
            android:textSize="25sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="10">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:background="@drawable/qrcode_backgrounf_ayout">

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:layout_marginTop="15dp">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/shabnam"
            android:text="@string/pay_by_barcode"
            android:textColor="@color/mdtp_white"
            android:textSize="15sp"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:textStyle="italic" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:weightSum="1"
        android:orientation="horizontal"
        android:gravity="center"
        >



        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:textSize="15sp"
            app:cardCornerRadius="21dp"
            android:background="@drawable/phone_pay_balance_background"

            >

            <TextView
                android:id="@+id/your_currently_balance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="اعتبار  شما : 120 تومان"
                android:textColor="@color/mdtp_white"
                android:background="@drawable/phone_pay_balance_background"
                android:padding="2dp"
                android:textSize="15sp"
                android:gravity="center"
                android:textStyle="bold"
                />
        </android.support.v7.widget.CardView>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:weightSum="1"
        android:orientation="horizontal"
        android:gravity="center"
        >



        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.4"
            android:textSize="15sp"

            app:cardCornerRadius="21dp"
            android:background="@drawable/phone_pay_balance_background1"
            >

            <TextView
                android:id="@+id/pay_by_recipent_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/pay_by"
                android:textColor="@color/overlay_black"
                android:background="@drawable/phone_pay_balance_background1"
                android:padding="2dp"
                android:textSize="15sp"
                android:gravity="center"
                android:textStyle="bold"

                />
        </android.support.v7.widget.CardView>


    </LinearLayout>



</LinearLayout>