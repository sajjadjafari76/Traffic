<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/announcement_background_layout"
        android:layout_marginBottom="10dp"
        >


        <ImageView
            android:id="@+id/annoucment_image"
            android:layout_width="245dp"
            android:layout_height="98dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/slider_bk"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            />


        <TextView
            android:id="@+id/annoucment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:fontFamily="@font/shabnam"
            android:text="@string/newTakestan"
            android:textColor="@color/overlay_black"
            android:layout_below="@+id/annoucment_image"
            android:layout_alignParentRight="true"
            android:paddingRight="15dp"
            />
        <TextView
            android:id="@+id/annoucment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:paddingRight="15dp"
            android:layout_marginBottom="5dp"
            android:text="@string/announcement_date"
            android:textColor="@color/overlay_black"
            android:layout_below="@+id/annoucment_title"
            android:layout_alignParentRight="true"
            />



        <TextView
            android:id="@+id/annoucment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/shabnam"
            android:padding="8dp"
            android:text="@string/announcement_main_text"
            android:textColor="@color/overlay_black"
            android:layout_below="@+id/annoucment_date"
            />


        <TextView
            android:id="@+id/annoucment_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="@string/announcement_link"
            android:textColor="@color/overlay_black"
            android:layout_below="@+id/annoucment_text"
            android:layout_centerHorizontal="true"
            />


    </RelativeLayout>

</android.support.v7.widget.CardView>




