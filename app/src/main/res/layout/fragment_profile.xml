<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_profile_bk"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context=".Drivers.Profile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7">

        <TextView
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_bk_logout"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            android:text="خروج"
            android:gravity="center"
            android:textColor="#FFF"
            android:fontFamily="@font/shabnam"
            android:textSize="@dimen/spacing_xmiddle"/>


        <ImageView
            android:id="@+id/Profile_UserIcon"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_centerInParent="true"
            android:src="@drawable/img_profile_user_icon" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/img_profile"
            android:layout_centerInParent="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Profile_UserIcon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/shabnam"
            android:text="مجتبی طاهرخانی"
            android:textColor="#FFF"
            android:textSize="@dimen/spacing_mlarge" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none"
        android:paddingTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:paddingBottom="4dp">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.github.florent37.expansionpanel.ExpansionHeader
                        android:id="@+id/SearchObject_Header"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        app:expansion_headerIndicator="@+id/SearchObject_Indicator"
                        app:expansion_layout="@+id/SearchObject_ExpansionLayout"
                        app:expansion_toggleOnClick="true">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="#E6ECFA">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/shabnam"
                                android:gravity="center"
                                android:text="اطلاعات شخصی"
                                android:textColor="@color/overlay_dark_80"
                                android:textSize="@dimen/spacing_large" />

                            <ImageView
                                android:id="@+id/SearchObject_Indicator"
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                android:padding="8dp"
                                app:srcCompat="@drawable/ic_keyboard_arrow_down" />

                        </RelativeLayout>

                    </com.github.florent37.expansionpanel.ExpansionHeader>

                    <com.github.florent37.expansionpanel.ExpansionLayout
                        android:id="@+id/SearchObject_ExpansionLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:expansion_expanded="true">

                        <android.support.v7.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/SearchObject_RecyclerInfo"
                            android:paddingTop="3dp"/>

                    </com.github.florent37.expansionpanel.ExpansionLayout>

                </LinearLayout>


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <com.github.florent37.expansionpanel.ExpansionHeader
                        android:id="@+id/SearchObject_Header1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:expansion_headerIndicator="@+id/SearchObject_Indicator1"
                        app:expansion_layout="@+id/SearchObject_ExpansionLayout1"
                        app:expansion_toggleOnClick="true">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:background="#E6ECFA">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/shabnam"
                                android:gravity="center"
                                android:text="اطلاعات خودرو"
                                android:textColor="@color/overlay_dark_80"
                                android:textSize="@dimen/spacing_large" />

                            <ImageView
                                android:id="@+id/SearchObject_Indicator1"
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                android:padding="8dp"
                                app:srcCompat="@drawable/ic_keyboard_arrow_down" />

                        </RelativeLayout>


                    </com.github.florent37.expansionpanel.ExpansionHeader>


                    <com.github.florent37.expansionpanel.ExpansionLayout
                        android:id="@+id/SearchObject_ExpansionLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:expansion_expanded="false">

                        <android.support.v7.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/SearchObject_RecyclerVehicle"
                            android:paddingTop="3dp"/>



                    </com.github.florent37.expansionpanel.ExpansionLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>