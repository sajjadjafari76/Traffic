<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:id="@+id/Page_137_Container">


    <android.support.v7.widget.Toolbar
        android:id="@+id/page_137_Toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:elevation="4dp"
        app:contentInsetStart="0dp"
        android:background="@color/colorPrimary"
        android:backgroundTint="@color/colorPrimary">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <irstit.transport.Views.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="ثبت شکایت"
                android:textColor="#FFF" />


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                app:srcCompat="@drawable/ic_left_arrow"
                android:id="@+id/Complaint_Back"/>

            <!--android:foreground="?android:attr/selectableItemBackgroundBorderless"-->


        </RelativeLayout>


    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:id="@+id/Page137_Scrool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/page_137_Toolbar"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">


                    <irstit.transport.Views.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="شرح پیام"
                        android:textColor="#FFF"
                        android:textSize="14sp"
                        android:background="#DA227898"
                        android:drawableRight="@drawable/ic_mail"
                        android:drawablePadding="12dp"/>


                    <Spinner
                        android:id="@+id/Complaint_Category"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="18dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/back_spinner"
                        android:focusableInTouchMode="true"
                        android:layoutDirection="rtl"
                        android:popupBackground="#62ffffff"
                        android:soundEffectsEnabled="true"
                        android:spinnerMode="dialog" />

                    <!--<Spinner-->
                    <!--android:id="@+id/Page_137_SpinnerRegion"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="46dp"-->
                    <!--android:layout_centerHorizontal="true"-->
                    <!--android:layout_marginTop="8dp"-->
                    <!--android:layout_marginRight="18dp"-->
                    <!--android:layout_marginLeft="18dp"-->
                    <!--android:layout_marginBottom="8dp"-->
                    <!--android:background="@drawable/back_spinner"-->
                    <!--android:layoutDirection="rtl"-->
                    <!--android:popupBackground="#62ffffff"-->
                    <!--android:soundEffectsEnabled="true"-->
                    <!--android:spinnerMode="dialog"-->
                    <!--android:saveEnabled="true"/>-->


                    <irstit.transport.Views.CustomEdittext
                        android:id="@+id/Complaint_Text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="18dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/back_message_137"
                        android:hint="*متن پیام"
                        android:lines="5"
                        android:padding="8dp"
                        android:textSize="16sp" />


                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">

                    <irstit.transport.Views.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="اطلاعات"
                        android:textColor="#FFF"
                        android:textSize="14sp"
                        android:background="#DA227898"
                        android:drawableRight="@drawable/ic_information"
                        android:drawablePadding="12dp"/>


                    <irstit.transport.Views.CustomEdittext
                        android:id="@+id/Complaint_Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="18dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/back_message_137"
                        android:hint="*نام"
                        android:padding="8dp"
                        android:textSize="16sp" />


                    <irstit.transport.Views.CustomEdittext
                        android:id="@+id/Complaint_Family"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="18dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/back_message_137"
                        android:hint="*نام خانوادگی"
                        android:padding="8dp"
                        android:textSize="16sp" />


                    <irstit.transport.Views.CustomEdittext
                        android:id="@+id/Complaint_Email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="18dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/back_message_137"
                        android:hint="*ایمیل"
                        android:inputType="textWebEmailAddress"
                        android:maxEms="10"
                        android:padding="8dp"
                        android:textSize="16sp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">

                    <irstit.transport.Views.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="شماره تماس"
                        android:textColor="#FFF"
                        android:textSize="14sp"
                        android:background="#DA227898"
                        android:drawableRight="@drawable/ic_call"
                        android:drawablePadding="12dp"/>


                    <irstit.transport.Views.CustomEdittext
                        android:id="@+id/Complaint_Phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="18dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/back_message_137"
                        android:hint="*همراه"
                        android:inputType="number"
                        android:padding="8dp"
                        android:textSize="16sp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">

                    <irstit.transport.Views.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="اطلاعات خودرو"
                        android:textColor="#FFF"
                        android:textSize="14sp"
                        android:background="#DA227898"
                        android:drawableRight="@drawable/ic_call"
                        android:drawablePadding="12dp"/>


                    <irstit.transport.Views.CustomEdittext
                        android:id="@+id/Complaint_CarCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="18dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/back_message_137"
                        android:hint="کد خوردرو"
                        android:inputType="number"
                        android:padding="8dp"
                        android:textSize="16sp" />

                    <irstit.transport.Views.CustomEdittext
                        android:id="@+id/Complaint_carPelak"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="18dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/back_message_137"
                        android:hint="پلاک خودرو"
                        android:inputType="number"
                        android:padding="8dp"
                        android:textSize="16sp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardElevation="1dp">

                <irstit.transport.Views.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="فایل ضمیمه"
                    android:textColor="#FFF"
                    android:textSize="14sp"
                    android:background="#DA227898"
                    android:drawableRight="@drawable/ic_resume"
                    android:drawablePadding="12dp"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp">


                    <LinearLayout
                        android:id="@+id/Page_137_View"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginTop="45dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:id="@+id/Page_137_Video_Btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:src="@drawable/logo" />

                            <irstit.transport.Views.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="فیلم"
                                android:textColor="#000"
                                android:textSize="12sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/Page_137_Image_Btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:src="@drawable/logo" />

                            <irstit.transport.Views.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="8dp"
                                android:gravity="center"
                                android:text="تصویر"
                                android:textColor="#000"
                                android:textSize="12sp" />


                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/Page_137_Result"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/Page_137_View"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="12sp" />


                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/Complaint_Btn"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/green_400"
                android:fontFamily="@font/shabnam"
                android:text="ثبت"
                android:textColor="#d9f1fd"
                android:textSize="20dp"/>

        </LinearLayout>

    </ScrollView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CCCCCCCC"
        android:visibility="gone"
        android:id="@+id/Complaint_Loading">


        <com.tuyenmonkey.mkloader.MKLoader
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:mk_type="TwinFishesSpinner"
            android:layout_centerInParent="true"
            app:mk_color="@color/colorPrimary" />


    </RelativeLayout>

</RelativeLayout>