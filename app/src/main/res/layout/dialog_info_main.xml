<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cfcfcf"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#cfcfcf"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_toLeftOf="@id/tex"
                android:text="منوی اصلی"
                android:textColor="#111"
                android:textSize="16sp"
                app:srcCompat="@drawable/ic_menu_black" />

            <TextView
                android:id="@+id/tex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/iransans"
                android:text="درمنوی اصلی امکانات موجود در اپلیکیشن ساحت(سارمان حمل و نقل شهرداری تاکستان)قبال مشاهده است.
با لمس هر کدم از آیتم ها، وارد صفحه مربوط به آن خواهید شد.
با لمس صفحه و کشیدن آن به چپ یا راست میتوانید خدمات دیگر اپلیکیشن را مشاهده فرمائید."
                android:textColor="#111" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                app:srcCompat="@drawable/ic_menu_black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image"
                android:text="در بالای این صفحه دکمه منو تعبیه گردیده است که با لمس این منوی کشویی تنظیمان مربوطه باز میشود."
                android:textColor="#111" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/image2"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                app:srcCompat="@drawable/sahat" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image2"
                android:text="در کلیه صفحات با لمس لوگوی ساحت به صفحه اول برنامه بازخواهید گشت."
                android:textColor="#111" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>